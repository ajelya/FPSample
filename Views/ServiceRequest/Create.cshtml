@model FPSample.Models.Entities.ServiceRequest
@{
    ViewData["Title"] = "Request Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Centering Container *@
<div class="d-flex justify-content-center align-items-center" style="min-height: 85vh; background-color: #f4f7f6;">

    @* The iAssist White Card Layout *@
    <div class="card shadow-sm p-4 border-0" style="width: 100%; max-width: 480px; border-radius: 20px;">

        <div class="text-center mb-4">
            <h2 style="color: #41a34d; font-weight: 700; font-size: 2rem;">Request Service</h2>
            <p class="text-muted">Please fill out the details below</p>
        </div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            @* Service Selection *@
            <div class="mb-3">
                <label class="form-label fw-bold" style="color: #555;">Select Service</label>
                <select asp-for="ServiceId" id="serviceSelect" class="form-select border-2" style="border-color: #e0e0e0; border-radius: 10px;">
                    <option value="">-- Choose Document --</option>
                    @if (ViewBag.ServiceList != null)
                    {
                        @foreach (var service in ViewBag.ServiceList)
                        {
                            <option value="@service.ServiceId">@service.ServiceName</option>
                        }
                    }
                </select>
            </div>

            @* This section remains hidden until a service is selected *@
            <div id="dynamicFormContent" style="display:none;">

                <h6 id="serviceHeader" class="text-success border-bottom pb-2 mb-3 fw-bold"></h6>

                @* Purpose Selection *@
                <div class="mb-3">
                    <label class="form-label fw-bold" style="color: #555;">Purpose</label>
                    <select asp-for="PurposeId" id="purposeSelect" class="form-select border-2" style="border-radius: 10px;">
                        <option value="">-- Select Purpose --</option>
                    </select>
                </div>

                @* Length of Stay Fields (Added based on your dashboard design) *@
                <div class="row mb-3" id="stayDurationFields">
                    <div class="col-6">
                        <label class="form-label small fw-bold">Length of Stay (Years)</label>
                        <input type="number" name="StayYears" class="form-control" placeholder="0" style="border-radius: 8px;">
                    </div>
                    <div class="col-6">
                        <label class="form-label small fw-bold">Length of Stay (Months)</label>
                        <input type="number" name="StayMonths" class="form-control" placeholder="0" style="border-radius: 8px;">
                    </div>
                </div>

                @* Conditional: Cedula Income Field *@
                <div class="mb-3 p-3 bg-light rounded" id="incomeField" style="display:none; border-left: 4px solid #dc3545;">
                    <label class="form-label text-danger fw-bold">Gross Annual Income</label>
                    <input asp-for="GrossAnnualIncome" type="number" step="0.01" class="form-control" placeholder="0.00" />
                    <small class="text-muted">Required for Cedula computation.</small>
                </div>

                @* Conditional: Barangay ID Photo Field *@
                <div class="mb-3 p-3 bg-light rounded" id="photoUploadField" style="display:none; border-left: 4px solid #0dcaf0;">
                    <label class="form-label text-info fw-bold">Upload 2x2 ID Picture</label>
                    <input type="file" name="ProfilePicture" class="form-control" accept="image/*" />
                    <small class="text-muted">Required for Barangay ID.</small>
                </div>

                @* Submission Note *@
                <div class="alert alert-warning border-0 small mb-4" style="border-radius: 10px; background-color: #fff4e5;">
                    <i class="bi bi-clock-history"></i> The Admin will review this and set your pickup date.
                </div>

                @* Green Submit Button *@
                <button type="submit" class="btn btn-success w-100 py-3 fw-bold" style="background-color: #41a34d; border: none; border-radius: 12px; font-size: 1.1rem;">
                    Submit Request
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#serviceSelect').change(function () {
                var sId = $(this).val();
                var pSelect = $('#purposeSelect');
                var incomeDiv = $('#incomeField');
                var photoDiv = $('#photoUploadField');
                var dynamicContent = $('#dynamicFormContent');
                var stayFields = $('#stayDurationFields');

                var selectedText = $("#serviceSelect option:selected").text().trim();

                if (sId) {
                    dynamicContent.fadeIn();
                    $('#serviceHeader').text(selectedText + " Details");

                    // Show/Hide fields based on service name
                    if (selectedText.includes("Cedula")) {
                        incomeDiv.show();
                        photoDiv.hide();
                        stayFields.hide();
                    } else if (selectedText.includes("ID")) {
                        photoDiv.show();
                        incomeDiv.hide();
                        stayFields.show();
                    } else {
                        incomeDiv.hide();
                        photoDiv.hide();
                        stayFields.show();
                    }

                    // AJAX to load Purposes
                    pSelect.empty().append('<option value="">-- Loading... --</option>');
                    $.getJSON('/ServiceRequest/GetPurposes', { serviceId: sId }, function (data) {
                        pSelect.empty().append('<option value="">-- Select Purpose --</option>');
                        $.each(data, function (i, item) {
                            pSelect.append('<option value="' + item.purposeId + '">' + item.purposeName + '</option>');
                        });
                    }).fail(function() {
                        pSelect.empty().append('<option value="">-- Error loading purposes --</option>');
                    });
                } else {
                    dynamicContent.hide();
                }
            });
        });
    </script>
}
@model FPSample.Models.Entities.User

@{
    ViewData["Title"] = "Resident Profile";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        @* Header with a matching iAssist blue/primary theme *@
        <div class="card-header bg-primary py-3 text-white">
            <h5 class="mb-0 fw-bold"><i class="bi bi-person-badge me-2"></i>Resident Profile</h5>
        </div>

        <div class="card-body p-4 p-md-5">
            <div class="row align-items-center">
                @* Left Profile Column *@
                <div class="col-md-4 text-center border-end">
                    <div class="display-1 text-primary opacity-25">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h3 class="fw-bold mt-3 mb-1">@Model.FirstName @Model.LastName</h3>
                    <p class="text-muted mb-3">Resident ID: #@Model.UserId</p>

                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi @(Model.IsActive ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                        @(Model.IsActive ? "Active Resident" : "Deactivated")
                    </span>
                </div>

                @* Right Details Column *@
                <div class="col-md-8 px-md-5 mt-4 mt-md-0">
                    <div class="row g-4">
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold d-block mb-1">Email Address</label>
                            <span class="fs-5 text-dark">@(Model.Email ?? "N/A")</span>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold d-block mb-1">Contact Number</label>
                            <span class="fs-5 text-dark">@(Model.ContactNo ?? "N/A")</span>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small text-uppercase fw-bold d-block mb-1">Home Address</label>
                            <span class="fs-5 text-dark">@Model.HouseNoStreet, @Model.Barangay, @Model.City, @Model.Province</span>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold d-block mb-1">Civil Status</label>
                            <span class="fs-6">@Model.CivilStatus</span>
                        </div>
                        <div class="col-sm-6">
                            <label class="text-muted small text-uppercase fw-bold d-block mb-1">Voter Status</label>
                            <span class="badge @(Model.IsVoter ? "bg-info-subtle text-info border border-info-subtle" : "bg-light text-muted border") px-3">
                                @(Model.IsVoter ? "Registered Voter" : "Non-Voter")
                            </span>
                        </div>
                    </div>

                    @* Action Buttons *@
                    <div class="mt-5 pt-4 border-top">
                        <a asp-action="Users" asp-controller="Admin" class="btn btn-secondary px-4 me-2 rounded-pill shadow-sm">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                        <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-warning px-4 rounded-pill shadow-sm fw-bold">
                            <i class="bi bi-pencil-square me-1"></i>Edit Information
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Subtle hover effect for the detail groups */
    .row.g-4 > div:hover {
        background-color: #f8f9fa;
        border-radius: 8px;
        transition: background-color 0.2s ease;
    }

    label {
        letter-spacing: 0.5px;
    }
</style>
@model IEnumerable<FPSample.Models.Entities.Service>

@{
    ViewData["Title"] = "Document Services";
}

<div class="container-fluid py-4 px-4">
    @* --- HEADER SECTION (Matched exactly to Active Service Requests & Resident Management) --- *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            @* Consistent bi-list-ul icon in brand green *@
            <i class="bi bi-list-ul fs-3 me-3" style="color: #28a745;"></i>
            <h3 class="mb-0 fw-bold" style="color: #1b5e20;">Document Services</h3>
        </div>
        @* Action Button *@
        <button class="btn btn-success shadow-sm d-flex align-items-center fw-bold"
                style="background-color: #28a745; border: none; padding: 10px 20px; border-radius: 8px;"
                onclick="openServiceModal(0, '', '', [])">
            <i class="bi bi-plus-circle me-2"></i>Add New Service
        </button>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0" role="alert" style="background-color: #f1f8e9; color: #1b5e20;">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- TABLE CARD --- *@
    <div class="card shadow-sm border-0 rounded-3">
        <div class="table-responsive">
            <table class="table align-middle mb-0 custom-service-table">
                @* Light Green Header *@
                <thead style="background-color: #f1f8e9;">
                    <tr>
                        <th class="ps-4 text-muted fw-bold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Service Name</th>
                        <th class="text-muted fw-bold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Description</th>
                        <th class="text-muted fw-bold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Available Purposes</th>
                        <th class="text-center text-muted fw-bold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Status</th>
                        <th class="text-center pe-4 text-muted fw-bold text-uppercase" style="font-size: 0.85rem; letter-spacing: 0.5px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4">
                                <div class="fw-bold text-dark fs-5">@s.ServiceName</div>
                            </td>
                            <td>
                                <div class="text-muted small" style="max-width: 300px; line-height: 1.4;">
                                    @s.Description
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap gap-1">
                                    @if (s.ServicePurposes != null && s.ServicePurposes.Any())
                                    {
                                        @foreach (var p in s.ServicePurposes)
                                        {
                                            <span class="badge border text-dark fw-medium"
                                                  style="background-color: #f8f9fa; font-size: 0.75rem; border-color: #dee2e6 !important; border-radius: 4px;">
                                                @p.PurposeName
                                            </span>
                                        }
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                @if (s.IsEnabled)
                                {
                                    <span class="badge bg-success px-3 py-2" style="border-radius: 6px; font-size: 0.8rem; letter-spacing: 0.5px;">ENABLED</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger px-3 py-2" style="border-radius: 6px; font-size: 0.8rem; letter-spacing: 0.5px;">DISABLED</span>
                                }
                            </td>
                            <td class="pe-4">
                                <div class="d-flex justify-content-center align-items-center gap-2">
                                    @* Edit Button *@
                                    <button type="button" class="btn-action btn-edit" title="Edit Service"
                                            onclick="openServiceModal(@s.ServiceId, '@s.ServiceName', '@s.Description', @Json.Serialize(s.ServicePurposes.Select(p => p.PurposeName)))">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    @* Toggle Status Button *@
                                    <form asp-action="ToggleServiceStatus" method="post" class="m-0">
                                        <input type="hidden" name="id" value="@s.ServiceId" />
                                        <button type="submit" class="btn btn-sm @(s.IsEnabled ? "btn-warning text-dark" : "btn-success") fw-bold px-3"
                                                style="height: 34px; border-radius: 4px; font-size: 0.75rem; text-transform: uppercase;">
                                            @(s.IsEnabled ? "Disable" : "Enable")
                                        </button>
                                    </form>

                                    @* Delete Button *@
                                    <form asp-action="DeleteService" method="post" class="m-0" onsubmit="return confirm('Are you sure you want to delete this service?');">
                                        <input type="hidden" name="id" value="@s.ServiceId" />
                                        <button type="submit" class="btn-action btn-delete" title="Delete Service">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Modal for Add/Edit *@
<div class="modal fade" id="serviceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content shadow border-0" style="border-radius: 12px;">
            <form asp-action="UpsertService" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header border-0" style="background-color: #f1f8e9; border-radius: 12px 12px 0 0;">
                    <h5 class="modal-title fw-bold" id="modalTitle" style="color: #1b5e20;">Service Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="ServiceId" id="modalServiceId" />
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small text-uppercase">Service Name</label>
                        <input type="text" name="ServiceName" id="modalServiceName" class="form-control border-light-subtle" style="background-color: #f8f9fa;" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small text-uppercase">Description</label>
                        <textarea name="Description" id="modalDescription" class="form-control border-light-subtle" style="background-color: #f8f9fa;" rows="3"></textarea>
                    </div>
                    <hr class="my-4 opacity-50" />
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <label class="form-label fw-bold text-muted small text-uppercase mb-0">Available Purposes</label>
                        <button type="button" class="btn btn-sm btn-outline-success fw-bold" onclick="addPurposeInput('')">
                            <i class="bi bi-plus-lg"></i> Add
                        </button>
                    </div>
                    <div id="purposeContainer"></div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="button" class="btn btn-light fw-bold px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success fw-bold px-4" style="background-color: #28a745;">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Table Layout Styling */
    .custom-service-table thead th {
        padding-top: 18px;
        padding-bottom: 18px;
        border: none;
    }

    .custom-service-table tbody td {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .custom-service-table tr:hover {
        background-color: #f1f8e9 !important;
        transition: background-color 0.2s;
    }

    /* Action Buttons (Pencil/Trash) */
    .btn-action {
        width: 34px;
        height: 34px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.2s;
        background: transparent;
        font-size: 1rem;
    }

    .btn-edit {
        border: 1px solid #0d6efd;
        color: #0d6efd;
    }

        .btn-edit:hover {
            background-color: #0d6efd;
            color: white;
        }

    .btn-delete {
        border: 1px solid #dc3545;
        color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #dc3545;
            color: white;
        }

    /* Input Focus State */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.15);
    }
</style>

@section Scripts {
    <script>
        function addPurposeInput(value) {
            const container = document.getElementById('purposeContainer');
            const div = document.createElement('div');
            div.className = 'input-group mb-2 shadow-sm';
            div.innerHTML = `
                <input type="text" name="Purposes" class="form-control border-light-subtle" value="${value}" placeholder="e.g. Scholarship" required />
                <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">
                    <i class="bi bi-x-lg"></i>
                </button>
            `;
            container.appendChild(div);
        }

        function openServiceModal(id, name, desc, purposes) {
            document.getElementById('modalServiceId').value = id;
            document.getElementById('modalServiceName').value = name;
            document.getElementById('modalDescription').value = desc;
            const container = document.getElementById('purposeContainer');
            container.innerHTML = '';

            if (purposes && purposes.length > 0) {
                purposes.forEach(p => addPurposeInput(p));
            } else if (id === 0) {
                addPurposeInput('');
            }

            document.getElementById('modalTitle').innerText = (id === 0) ? "Add New Document Service" : "Edit Document Service";
            var myModal = new bootstrap.Modal(document.getElementById('serviceModal'));
            myModal.show();
        }
    </script>
}
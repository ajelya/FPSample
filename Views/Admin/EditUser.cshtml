@model FPSample.Models.Entities.User

<div class="container mt-4 mb-5">
    <form asp-action="EditUser" method="post" class="card shadow-sm border-0">
        @Html.AntiForgeryToken()
        <div class="card-header bg-warning py-3">
            <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-pencil-square me-2"></i>Edit Resident Information</h5>
        </div>

        <div class="card-body p-4">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Username" /> @* Keep these to satisfy [Required] if needed *@

            <div class="mb-4">
                <h6 class="text-primary border-bottom pb-2 mb-3">Full Name</h6>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Middle Name</label>
                        <input asp-for="MiddleName" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Suffix</label>
                        <input asp-for="Suffix" class="form-control" placeholder="Jr., III, etc." />
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h6 class="text-primary border-bottom pb-2 mb-3">Personal Details</h6>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label small fw-bold">Date of Birth</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label small fw-bold">Sex</label>
                        <select asp-for="Sex" class="form-select">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Civil Status</label>
                        <input asp-for="CivilStatus" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Religion</label>
                        <input asp-for="Religion" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h6 class="text-primary border-bottom pb-2 mb-3">Address</h6>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">House # / Street</label>
                        <input asp-for="HouseNoStreet" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Barangay</label>
                        <input asp-for="Barangay" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">City</label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Province</label>
                        <input asp-for="Province" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h6 class="text-primary border-bottom pb-2 mb-3">Contact & Length of Stay</h6>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Years of Stay</label>
                        <input asp-for="StayYears" type="number" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Months of Stay</label>
                        <input asp-for="StayMonths" type="number" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Contact Number</label>
                        <input asp-for="ContactNo" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="mb-2">
                <h6 class="text-primary border-bottom pb-2 mb-3">Checklist</h6>
                <div class="form-check form-check-inline me-4">
                    <input class="form-check-input" type="radio" asp-for="IsVoter" value="true" id="voter">
                    <label class="form-check-label fw-bold" for="voter">Voter</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsVoter" value="false" id="nonvoter">
                    <label class="form-check-label fw-bold" for="nonvoter">Non-Voter</label>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light text-end py-3">
            <a asp-action="Users" class="btn btn-outline-secondary px-4 me-2">Cancel</a>
            <button type="submit" class="btn btn-success px-4">Update Resident</button>
        </div>
    </form>
</div>
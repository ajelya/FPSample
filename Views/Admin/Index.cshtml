@model FPSample.Models.Entities.AdminDashboardVM

@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="dashboard-container">
    @* --- HEADER SECTION --- *@
    <div class="header-section d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">Mabuhay, Barangay Malanday!</h2>
            <p class="text-muted">Maligayang pagbabalik, kaibigan</p>
        </div>
    </div>

    @* --- STATS SECTION --- *@
    <div class="stats-grid mb-5">
        <div class="stat-card">
            <div class="icon-wrapper bg-primary-light"><i class="bi bi-people-fill text-primary"></i></div>
            <p class="stat-label">Total Registered Users</p>
            <h2 class="stat-value text-dark">@Model.TotalUsers</h2>
            <small class="stat-update">Last update: @DateTime.Now.ToString("dd MMM yyyy")</small>
        </div>
        <div class="stat-card">
            <div class="icon-wrapper bg-light"><i class="bi bi-file-earmark-text text-secondary"></i></div>
            <p class="stat-label">Total Service Request</p>
            <h2 class="stat-value text-dark">@Model.TotalRequests</h2>
            <small class="stat-update">Last update: @DateTime.Now.ToString("dd MMM yyyy")</small>
        </div>
        <div class="stat-card border-success">
            <div class="icon-wrapper bg-success-light border border-success"><i class="bi bi-check-circle text-success"></i></div>
            <p class="stat-label">Approved Requests</p>
            <h2 class="stat-value text-success">@Model.ApprovedRequests</h2>
            <small class="stat-update">Last update: @DateTime.Now.ToString("dd MMM yyyy")</small>
        </div>
        <div class="stat-card border-danger">
            <div class="icon-wrapper bg-danger-light border border-danger"><i class="bi bi-x-circle text-danger"></i></div>
            <p class="stat-label">Rejected Requests</p>
            <h2 class="stat-value text-danger">@Model.RejectedRequests</h2>
            <small class="stat-update">Last update: @DateTime.Now.ToString("dd MMM yyyy")</small>
        </div>
        <div class="stat-card border-info">
            <div class="icon-wrapper bg-info-light border border-info"><i class="bi bi-folder-check text-info"></i></div>
            <p class="stat-label">Ready to Claim</p>
            <h2 class="stat-value text-info">@Model.ReadyToClaim</h2>
            <small class="stat-update">Last update: @DateTime.Now.ToString("dd MMM yyyy")</small>
        </div>
    </div>

    @* --- FOLDERS & CHART SECTION --- *@
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-folder2-open fs-4 me-2 text-success"></i>
                <h4 class="fw-bold mb-0 text-dark">Barangay Documents</h4>
            </div>
            <div class="documents-grid">
                <div class="doc-folder">
                    <i class="bi bi-folder-fill"></i>
                    <span class="text-dark fw-bold">Barangay Clearance</span>
                </div>
                <div class="doc-folder">
                    <i class="bi bi-folder-fill"></i>
                    <span class="text-dark fw-bold">Barangay Certificate</span>
                </div>
                <div class="doc-folder">
                    <i class="bi bi-folder-fill"></i>
                    <span class="text-dark fw-bold">Cedula</span>
                </div>
                <div class="doc-folder">
                    <i class="bi bi-folder-fill"></i>
                    <span class="text-dark fw-bold">Barangay ID</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="chart-box card border-0 shadow-sm rounded-4 p-4 text-center h-100 bg-white">
                <h5 class="fw-bold mb-4 text-dark">Resident Distribution</h5>
                <div class="donut-chart-container">
                    <div class="donut-inner">
                        <span class="fs-2 fw-bold text-dark">@Model.TotalUsers</span>
                        <small class="text-muted d-block">Total</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bi {
        display: inline-block;
        line-height: 1;
        vertical-align: -.125em;
        fill: currentColor;
    }

    .dashboard-container {
        padding: 1.5rem;
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .stat-card {
        background: white;
        padding: 1.5rem;
        border-radius: 1.25rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.05);
        border: 1px solid #eee;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.25rem;
    }

    .icon-wrapper {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
        margin-bottom: 1rem;
    }

    .bg-primary-light {
        background-color: #e7f1ff;
    }

    .bg-success-light {
        background-color: #f0fdf4;
    }

    .bg-danger-light {
        background-color: #fff5f5;
    }

    .bg-info-light {
        background-color: #e1f5fe;
    }

    .stat-label {
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 0.25rem;
        font-weight: 600;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 800;
        margin-bottom: 0.25rem;
    }

    .stat-update {
        font-size: 0.75rem;
        color: #94a3b8;
    }

    .documents-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1rem;
    }

    .doc-folder {
        background: white;
        padding: 2.5rem 1rem;
        border-radius: 1.25rem;
        text-align: center;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
    }

        .doc-folder i {
            font-size: 3rem;
            color: #ffca28; /* Gold folder color */
            margin-bottom: 0.75rem;
            display: block;
        }

        /* Hover effect for folders to match green theme */
        .doc-folder:hover {
            border-color: #28a745;
            background-color: #f1f8e9;
            transform: translateY(-5px);
            cursor: pointer;
        }

    .donut-chart-container {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: conic-gradient(#16a34a 70%, #f1f5f9 0);
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .donut-inner {
        width: 100px;
        height: 100px;
        background: white;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
</style>
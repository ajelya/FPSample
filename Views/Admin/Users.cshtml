@model IEnumerable<FPSample.Models.Entities.User>

@{
    ViewData["Title"] = "Resident Management";
}

<div class="container-fluid py-4 px-4">
    @* --- HEADER SECTION (Matched to Active Service Requests) --- *@
    <div class="d-flex align-items-center mb-4">
        @* Matches icon size fs-3 and brand green *@
        <i class="bi bi-list-ul fs-3 me-3" style="color: #28a745;"></i>
        @* Matches heading tag h3 and dark green *@
        <h3 class="mb-0 fw-bold" style="color: #1b5e20;">Resident Management</h3>
    </div>

    @* --- SEARCH & TABLE CARD --- *@
    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-white py-4 border-0">
            <form method="get" asp-controller="Admin" asp-action="Users" class="row g-2 align-items-center">
                <div class="col-md-6">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" name="searchTerm" class="form-control bg-light border-start-0 fs-5"
                               placeholder="Search by name, email, or contact..."
                               value="@ViewData["CurrentFilter"]" />
                        <button type="submit" class="btn btn-success px-5 fw-bold" style="background-color: #28a745; border-color: #28a745;">Search</button>
                    </div>
                </div>
                <div class="col-auto">
                    @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                    {
                        <a asp-controller="Admin" asp-action="Users" class="btn btn-lg btn-outline-secondary ms-1">Clear</a>
                    }
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 custom-resident-table">
                <thead style="background-color: #f1f8e9; border-bottom: 2px solid #28a745;">
                    <tr>
                        <th class="ps-4 text-muted fw-bold text-uppercase" style="font-size: 0.9rem;">Name</th>
                        <th class="text-muted fw-bold text-uppercase" style="font-size: 0.9rem;">Address</th>
                        <th class="text-muted fw-bold text-uppercase" style="font-size: 0.9rem;">Contact</th>
                        <th class="text-muted fw-bold text-uppercase" style="font-size: 0.9rem;">Status</th>
                        <th class="text-center pe-4 text-muted fw-bold text-uppercase" style="font-size: 0.9rem;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-person-exclamation" style="font-size: 3rem; color: #ced4da;"></i>
                                <p class="mt-2 fs-5">No residents found matching your search.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr class="border-bottom">
                                <td class="ps-4">
                                    <div class="fw-bold text-dark fs-5">@user.LastName, @user.FirstName @user.Suffix</div>
                                    <div class="text-muted fs-6">@user.Email</div>
                                </td>
                                <td>
                                    <div class="text-dark fs-6" style="max-width: 300px;">
                                        @user.HouseNoStreet, @user.Barangay, @user.City
                                    </div>
                                </td>
                                <td class="text-dark fw-medium fs-5">@user.ContactNo</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success px-3 py-2 border border-success-subtle rounded-pill" style="font-size: 0.85rem;">
                                            <i class="bi bi-check-circle-fill me-1"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger px-3 py-2 border border-danger-subtle rounded-pill" style="font-size: 0.85rem;">
                                            <i class="bi bi-x-circle-fill me-1"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center pe-4">
                                    <div class="d-flex justify-content-center gap-2">
                                        @* VIEW *@
                                        <a asp-controller="Admin" asp-action="ViewProfile" asp-route-id="@user.UserId"
                                           class="btn btn-sm btn-outline-success px-3 fw-bold action-btn">
                                            View
                                        </a>

                                        @* EDIT *@
                                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.UserId"
                                           class="btn btn-sm btn-outline-primary px-3 fw-bold action-btn">
                                            Edit
                                        </a>

                                        @* TOGGLE *@
                                        <form asp-controller="Admin" asp-action="ToggleUserStatus" asp-route-id="@user.UserId" method="post" onsubmit="return confirm('Change user status?');" class="m-0">
                                            <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-outline-danger" : "btn-success") px-3 fw-bold action-btn"
                                                    style="@(!user.IsActive ? "background-color: #28a745; color: white;" : "")">
                                                @(user.IsActive ? "Deactivate" : "Activate")
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .custom-resident-table thead th {
        padding-top: 15px;
        padding-bottom: 15px;
    }

    .custom-resident-table tbody td {
        padding-top: 20px;
        padding-bottom: 20px;
    }

    /* Hover effect matching Active Request Style */
    .custom-resident-table tr:hover {
        background-color: #f1f8e9 !important;
    }

    .action-btn {
        border-radius: 6px;
        transition: all 0.2s;
        border-width: 2px;
        font-size: 0.85rem;
    }

    /* Search Input Focus */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.15);
    }

    .btn-outline-success {
        color: #28a745;
        border-color: #28a745;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
        }
</style>
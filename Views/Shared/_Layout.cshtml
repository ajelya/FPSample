<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iAssist</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            overflow-x: hidden;
            background-color: #f4f7f6;
        }

        #wrapper {
            display: flex;
            width: 100%;
        }

        /* The Green Sidebar from your screenshot */
        #sidebar-wrapper {
            min-height: 100vh;
            width: 250px;
            background-color: #41a34d; /* Matches the green in your image */
            transition: all 0.3s ease;
            position: fixed;
        }

        .sidebar-heading {
            padding: 2rem 1.5rem;
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            text-align: center;
        }

        /* Sidebar Navigation Links */
        .list-group-item {
            background-color: transparent !important;
            color: rgba(255, 255, 255, 0.8) !important;
            border: none !important;
            padding: 15px 30px !important;
            font-size: 1.1rem;
        }

            .list-group-item:hover {
                color: white !important;
                background-color: rgba(255, 255, 255, 0.1) !important;
            }

            /* Active link styling */
            .list-group-item.active {
                color: white !important;
                font-weight: bold;
            }

        /* Main Content area to the right of sidebar */
        #page-content-wrapper {
            width: 100%;
            margin-left: 250px; /* Same as sidebar width */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .logout-container {
            position: absolute;
            bottom: 20px;
            width: 100%;
            padding: 0 20px;
        }

        .btn-logout {
            background-color: white;
            color: #41a34d;
            font-weight: bold;
            border-radius: 8px;
            width: 100%;
            border: none;
            padding: 10px;
        }
    </style>
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">iAssist</div>
            <div class="list-group list-group-flush">
                <a asp-controller="Account" asp-action="Home"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Home" ? "active" : "")">
                    Home
                </a>
                <a asp-controller="ServiceRequest" asp-action="Create"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
                    Request Service
                </a>
                <a asp-controller="ServiceRequest" asp-action="MyRequests"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyRequests" ? "active" : "")">
                    View Requests
                </a>
                <a asp-controller="Account" asp-action="Profile"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")">
                    My Profile
                </a>
            </div>

            <div class="logout-container">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-logout">Logout</button>
                </form>
            </div>
        </div>

        <div id="page-content-wrapper">
            <div class="container-fluid p-4">
                @RenderBody()
            </div>

            <footer class="mt-auto py-3 bg-white border-top text-center">
                <div class="container text-muted">
                    &copy; 2026 iAssist
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iAssist</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            overflow-x: hidden;
            background-color: #f4f7f6;
        }

        #wrapper {
            display: flex;
            width: 100%;
        }

        /* The Green Sidebar */
        #sidebar-wrapper {
            min-height: 100vh;
            width: 250px;
            background-color: #41a34d;
            transition: all 0.3s ease;
            position: fixed;
            z-index: 1000;
        }

        .sidebar-heading {
            padding: 2rem 1.5rem;
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        /* Sidebar Navigation Links */
        .list-group-item {
            background-color: transparent !important;
            color: rgba(255, 255, 255, 0.8) !important;
            border: none !important;
            padding: 15px 25px !important;
            font-size: 1.05rem;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: 0.2s;
        }

            .list-group-item i {
                font-size: 1.2rem;
            }

            .list-group-item:hover {
                color: white !important;
                background-color: rgba(255, 255, 255, 0.1) !important;
            }

            /* Active link styling */
            .list-group-item.active {
                color: white !important;
                background-color: rgba(255, 255, 255, 0.2) !important;
                font-weight: bold;
                border-left: 4px solid white !important;
            }

        /* Main Content area */
        #page-content-wrapper {
            width: 100%;
            margin-left: 250px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .logout-container {
            position: absolute;
            bottom: 20px;
            width: 100%;
            padding: 0 20px;
        }

        .btn-logout {
            background-color: white;
            color: #41a34d;
            font-weight: bold;
            border-radius: 8px;
            width: 100%;
            border: none;
            padding: 10px;
            transition: 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .btn-logout:hover {
                background-color: #f8f9fa;
                transform: translateY(-2px);
                color: #2d7a38;
            }

        /* Modal Styling to match your green theme */
        .modal-content {
            border-radius: 15px;
            border: none;
        }

        .modal-header {
            background-color: #f1f8e9;
            border-radius: 15px 15px 0 0;
            border-bottom: 1px solid #e0e0e0;
        }

        /* Custom Alert Styling */
        .alert {
            border-radius: 12px;
            border: none;
        }
    </style>
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">iAssist</div>
            <div class="list-group list-group-flush">

                @if (Context.Session.GetString("UserRole") == "Admin")
                {
                    <a asp-controller="Admin" asp-action="Index"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>

                    <a asp-controller="Admin" asp-action="ActiveRequests"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "ActiveRequests" ? "active" : "")">
                        <i class="bi bi-file-earmark-text"></i> Service Requests
                    </a>

                    <a asp-controller="Admin" asp-action="Users"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" || ViewContext.RouteData.Values["Action"]?.ToString() == "ViewProfile" ? "active" : "")">
                        <i class="bi bi-people"></i> Manage Residents
                    </a>

                    <a asp-controller="Admin" asp-action="Services"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Services" ? "active" : "")">
                        <i class="bi bi-shield-check"></i> Barangay Services
                    </a>

                    <a asp-controller="Admin" asp-action="AdminProfile"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "AdminProfile" ? "active" : "")">
                        <i class="bi bi-person-badge"></i> Admin Profile
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Home"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Home" ? "active" : "")">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                    <a asp-controller="ServiceRequest" asp-action="Create"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
                        <i class="bi bi-file-earmark-plus"></i> Request Service
                    </a>
                    <a asp-controller="ServiceRequest" asp-action="MyRequests"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyRequests" ? "active" : "")">
                        <i class="bi bi-clock-history"></i> View Requests
                    </a>
                    <a asp-controller="Account" asp-action="Profile"
                       class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")">
                        <i class="bi bi-person-circle"></i> My Profile
                    </a>
                }
            </div>

            @* UPDATED: Logout button now triggers the Modal *@
            <div class="logout-container">
                <button type="button" class="btn btn-logout shadow-sm" data-bs-toggle="modal" data-bs-target="#logoutModal">
                    <i class="bi bi-box-arrow-left"></i> Logout
                </button>
            </div>
        </div>

        <div id="page-content-wrapper">
            <main role="main" class="container-fluid p-4">

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @RenderBody()
            </main>

            <footer class="mt-auto py-3 bg-white border-top text-center">
                <div class="container text-muted">
                    &copy; 2026 iAssist - Barangay Management System
                </div>
            </footer>
        </div>
    </div>

    @* --- Logout Confirmation Modal --- *@
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow">
                <div class="modal-header border-0 p-4 pb-0">
                    <h5 class="modal-title fw-bold" id="logoutModalLabel" style="color: #1b5e20;">
                        <i class="bi bi-box-arrow-left me-2"></i>Confirm Logout
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <p class="mb-0 text-muted">Are you sure you want to log out of the iAssist system?</p>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="button" class="btn btn-light fw-bold px-4" data-bs-dismiss="modal" style="border-radius: 8px;">Cancel</button>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-success fw-bold px-4" style="background-color: #41a34d; border: none; border-radius: 8px;">
                            Logout Now
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Smoothly hide alerts after 4 seconds
        $(document).ready(function () {
            window.setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function(){
                    $(this).remove();
                });
            }, 4000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
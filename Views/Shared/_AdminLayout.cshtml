@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Portal</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            overflow-x: hidden;
            background-color: #f4f7f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        #wrapper {
            display: flex;
            width: 100%;
        }


        #sidebar-wrapper {
            min-height: 100vh;
            width: 280px;
            background-color: #41a34d; 
            transition: all 0.3s ease;
            position: fixed;
            z-index: 1000;
            display: flex;
            flex-direction: column;
        }

        .sidebar-heading {
            padding: 2.5rem 1.5rem 0.2rem 1.5rem;
            font-size: 2.2rem;
            font-weight: 800;
            color: white;
            text-align: left;
            letter-spacing: -1px;
        }

        .sidebar-subheading {
            color: white;
            font-size: 1.1rem;
            text-align: left;
            padding: 0 1.5rem 2.5rem 1.5rem;
            display: block;
            font-weight: 400;
            opacity: 0.9;
        }

       
        .list-group-item {
            background-color: transparent !important;
            color: white !important;
            border: none !important;
            padding: 14px 25px !important;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            margin: 4px 15px;
            border-radius: 12px;
            transition: background 0.2s;
        }

            .list-group-item i {
                margin-right: 15px;
                font-size: 1.4rem;
            }

            .list-group-item:hover {
                background-color: rgba(255, 255, 255, 0.1) !important;
            }

            
            .list-group-item.active {
                background-color: rgba(255, 255, 255, 0.25) !important;
                font-weight: 600;
                color: white !important;
            }

     
        #page-content-wrapper {
            width: 100%;
            margin-left: 280px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

     
        .logout-container {
            margin-top: auto;
            padding: 20px 15px 40px 15px;
        }

        .btn-logout {
            background-color: transparent;
            color: white;
            font-size: 1.1rem;
            border: none;
            width: 100%;
            text-align: left;
            padding: 12px 25px;
            display: flex;
            align-items: center;
            gap: 15px;
            border-radius: 12px;
        }

            .btn-logout:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }
    </style>
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">iAssist</div>
            <span class="sidebar-subheading">Administration's Portal</span>

            <div class="list-group list-group-flush">
                <a asp-controller="Admin" asp-action="Index"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <a asp-controller="Admin" asp-action="Users"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                    <i class="bi bi-people"></i> Manage Users
                </a>

                <a asp-controller="Admin" asp-action="Services"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Services" ? "active" : "")">
                    <i class="bi bi-file-earmark-text"></i> Barangay Services
                </a>

                <a asp-controller="Admin" asp-action="ViewProfile"
                   class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "ViewProfile" ? "active" : "")">
                    <i class="bi bi-person-circle"></i> Admin Profile
                </a>
            </div>

            <div class="logout-container">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-logout">
                        <i class="bi bi-box-arrow-left"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <div id="page-content-wrapper">
            <div class="container-fluid p-5">
                @RenderBody()
            </div>

            <footer class="mt-auto py-3 text-center opacity-50">
                <div class="container">
                    <small>&copy; 2026 iAssist - Barangay Malanday</small>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>